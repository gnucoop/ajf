pipeline {
  agent {
    label 'bazel-build-28'
  }
  environment {
    scmInfo = checkout scm
    gitBranch = scmInfo.GIT_BRANCH.replace("origin/", "")
  }
  stages {
    stage('Restore cache') {
      steps {
        sh 'gsutil cp gs://ajf-bazel-remote-cache/ajf-node-modules.tar.gz .'
        sh 'tar xfz ajf-node-modules.tar.gz'
        sh 'rm ajf-node-modules.tar.gz'
        sh 'gsutil cp gs://ajf-bazel-remote-cache/ajf-bazel-repository.tar.gz .'
        sh 'tar xfz ajf-bazel-repository.tar.gz -C /home/jenkins'
        sh 'rm ajf-bazel-repository.tar.gz'
        sh 'cat .jenkins/bazelrc >> .bazelrc'
      }
    }
    stage('Setup') {
      steps {
        sh 'yarn install --non-interactive'
      }
    }
    stage('Lint') {
      steps {
        sh 'yarn -s bazel build //:rollup_globals'
        sh 'yarn -s check-rollup-globals $(yarn -s bazel info bazel-bin)/rollup_globals.json'
        sh 'yarn -s bazel build //:entry_points_manifest'
        sh 'yarn check-entry-point-setup $(yarn -s bazel info bazel-bin)/entry_points_manifest.json'
        sh 'yarn -s lint'
      }
    }
    stage('API guard tests') {
      steps {
        sh 'yarn -s bazel test tools/public_api_guard/...'
      }
    }
    stage('Build') {
      steps {
        sh 'yarn -s bazel build src/... --build_tag_filters=-docs-package,-release-package'
      }
    }
    stage('Unit tests') {
      steps {
        sh 'yarn -s bazel test src/... --build_tag_filters=-docs-package,-e2e --test_tag_filters=-e2e --config=view-engine --build_tests_only'
        sh 'yarn -s bazel test src/... --build_tag_filters=-e2e --test_tag_filters=-e2e --build_tests_only'
      }
    }
    stage('Integration tests') {
      steps {
        sh 'yarn -s bazel test src/... --build_tag_filters=e2e --test_tag_filters=e2e --build_tests_only'
      }
    }
    stage('Release output') {
      steps {
        sh 'yarn build'
        sh 'yarn check-release-output'
        sh 'cp -R dist/releases/* node_modules/@ajf/'
        sh 'yarn ngcc'
        sh 'rm -Rf node_modules/@ajf/calendars node_modules/@ajf/core node_modules/@ajf/ionic node_modules/@ajf/material'
      }
    }
    stage('Save cache') {
      steps {
        sh 'tar cfz ajf-node-modules.tar.gz node_modules'
        sh 'gsutil cp ajf-node-modules.tar.gz gs://ajf-bazel-remote-cache/'
        sh 'rm ajf-node-modules.tar.gz'
        sh 'tar cfz ajf-bazel-repository.tar.gz -C /home/jenkins bazel_repository_cache'
        sh 'gsutil cp ajf-bazel-repository.tar.gz gs://ajf-bazel-remote-cache/'
        sh 'rm ajf-bazel-repository.tar.gz'
      }
    }
    stage('Publish snapshots') {
      when {
        expression {
          return gitBranch == 'master'
        }
      }
      steps {
        sh 'yarn -s bazel build src/ajf-examples:npm_package --config=release'
        sh './scripts/circleci/publish-snapshots.sh'
        sh 'node ./scripts/deploy-dev-app.js'
      }
    }
  }
}
