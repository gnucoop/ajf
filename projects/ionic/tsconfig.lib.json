/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../../out-tsc/ionic",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["echarts"],
    "paths": {
      "@ajf/core": ["../../dist/core"],
      "@ajf/core/*": ["../../dist/core/*"],
      "@ajf/ionic": ["../../dist/ionic"],
      "@ajf/ionic/*": ["../../dist/ionic/*"]
    }
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
